[Unit]
Description={{name}} Service
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/opt/{{name}}/bin/{{name}} start
ExecReload=/opt/{{name}}/bin/{{name}} restart
ExecStop=/opt/{{name}}/bin/{{name}} stop
User={{name}}
WorkingDirectory=/opt/{{name}}/bin
LimitNOFILE=1000000

[Install]
WantedBy=multi-user.target